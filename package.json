{
    "name": "svg",
    "displayName": "SVG",
    "description": "%description%",
    "version": "0.0.6",
    "publisher": "jock",
    "engines": {
        "vscode": "^1.8.0"
    },
    "icon": "images/svglogo.png",
    "preview": true,
    "galleryBanner": {
        "color": "#FFB13B",
        "theme": "light"
    },
    "categories": [
        "Languages",
        "Linters",
        "Other"
    ],
    "activationEvents": [
        "onCommand:_svg.showSvg",
        "onLanguage:svg",
        "onLanguage:xml"
    ],
    "main": "./out/src/extension",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/lishu/vscode-svg.git"
    },
    "contributes": {
        "commands": [
            {
                "command": "_svg.moveCursor",
                "title": "Move Cursor"
            },
            {
                "command": "_svg.showSvg",
                "title": "%svg.showSvg.title%",
                "icon": {
                    "dark": "./images/Preview_inverse.svg",
                    "light": "./images/Preview.svg"
                }
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "_svg.showSvg",
                    "when": "editorLangId == svg",
                    "group": "navigation"
                }
            ]
        },
        "languages": [
            {
                "id": "svg",
                "extensions": [
                    ".svg"
                ],
                "firstLine": "(\\<svg)|(\\<\\!doctype\\s+svg)",
                "mimetypes": [
                    "image/svg+xml"
                ],
                "aliases": [
                    "SVG",
                    "svg"
                ],
                "configuration": "./svg.language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "svg",
                "scopeName": "text.svg",
                "path": "./syntaxes/svg.json"
            }
        ],
        "configuration": {
            "title": "SVG",
            "properties": {
                "svg.completion.showAdvanced": {
                    "title": "%configuration.completion.showAdvanced.title%",
                    "type": "boolean",
                    "default": false,
                    "description": "%configuration.completion.showAdvanced.description%"
                },
                "svg.completion.showDeprecated": {
                    "title": "%configuration.completion.showDeprecated.title%",
                    "type": "boolean",
                    "default": false,
                    "description": "%configuration.completion.showDeprecated.description%"
                },
                "svg.format.convertColors": {
                    "title": "%configuration.format.convertColors.title%",
                    "type": "boolean",
                    "default": false,
                    "description": "%configuration.format.convertColors.description%"
                },
                "svg.format.convertShapeToPath": {
                    "title": "%configuration.format.convertShapeToPath.title%",
                    "type": "boolean",
                    "default": false,
                    "description": "%configuration.format.convertShapeToPath.description%"
                },
                "svg.format.convertTransform": {
                    "title": "%configuration.format.convertTransform.title%",
                    "type": "boolean",
                    "default": false,
                    "description": "%configuration.format.convertTransform.description%"
                },
                "svg.format.mergePaths": {
                    "title": "%configuration.format.mergePaths.title%",
                    "type": "boolean",
                    "default": false,
                    "description": "%configuration.format.mergePaths.description%"
                },
                "svg.format.removeComments": {
                    "title": "%configuration.format.removeComments.title%",
                    "type": "boolean",
                    "default": false,
                    "description": "%configuration.format.removeComments.description%"
                },
                "svg.format.removeDesc": {
                    "title": "%configuration.format.removeDesc.title%",
                    "type": "boolean",
                    "default": false,
                    "description": "%configuration.format.removeDesc.description%"
                },
                "svg.format.removeDoctype": {
                    "title": "%configuration.format.removeDoctype.title%",
                    "type": "boolean",
                    "default": false,
                    "description": "%configuration.format.removeDoctype.description%"
                },
                "svg.format.removeMetadata": {
                    "title": "%configuration.format.removeMetadata.title%",
                    "type": "boolean",
                    "default": false,
                    "description": "%configuration.format.removeMetadata.description%"
                },
                "svg.format.sortAttrs": {
                    "title": "%configuration.format.sortAttrs.title%",
                    "type": "boolean",
                    "default": true,
                    "description": "%configuration.format.sortAttrs.description%"
                },
                "svg.version": {
                    "title": "%configuration.version.title%",
                    "enum": [
                        "1.1",
                        "2.0"
                    ],
                    "description": "%configuration.version.description%",
                    "default": "1.1"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "mocha": "^2.3.3",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "svgo": "^0.7.2"
    }
}
